{
  "name": "duck-manager",
  "version": "1.0.0",
  "description": "Sistema de gest√£o",
  "main": "app.js",
  "scripts": {
    "start": "nodemon",
    "package": "npx @electron/packager . --platform=win32 --arch=x64 --out=package --overwrite --ignore(lista de pedidos|package|tests|resources|presentation|\\.gitignore|README.md|nodemon.json) --icon=resources/imgs/logo.ico",
    "build": "electron-builder"
  },
  "author": "The Heapsters",
  "license": "MIT",
  "build": {
    "appId": "com.theheapsters.duckmanager",
    "productName": "Duck Manager",
    "directories": {
      "output": "app builded"
    },
    "files": [
      "app/**/*",
      "app.js",
      "package.json",
      "!**/*.log",
      "!**/*.map",
      "!node_modules/**/{test,docs,example}/**",
      "!**/node_modules/**/.*",
      "!**/node_modules/**/*.md",
      "!**/node_modules/**/test/**",
      "!**/node_modules/**/example/**",
      "!**/node_modules/**/docs/**"
    ],
    "asar": true,
    "win": {
      "icon": "resources/imgs/logo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "createDesktopShortcut": "always",
    }
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "mysql2": "^3.11.3"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.5",
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.7"
  }
}
